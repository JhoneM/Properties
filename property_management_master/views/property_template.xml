<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="properties" name="Properties">
        <t t-call="website.layout">
            <div class="wrap">
                <div class="container-fluid">
                </div>
                    <div class="conteiner-nav">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <button class="navbar-toggler" data-target="#menu" data-toggle="collapse" type="button">
                                <span class="nav-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="menu">
                                <ul class="navbar-nav mr-auto">
                                    <li class="navbar-item dropdown">
                                        <h5 class="select-h5"> OPERACIONES</h5> 
                                        <select class="form-select" aria-label="Default select example">
                                          <option ></option>
                                          <option value="1">Venta</option>
                                          <option value="2">Alquiler</option>
                                          <option value="3">Alquiler Temporaneo</option>
                                        </select>
                                    </li>
                                    <li class="navbar-item dropdown">
                                         <h5 class="select-h5"> TIPO DE PROPIEDAD</h5> 
                                         <select class="form-select" aria-label="Default select example">
                                           <option ></option>
                                           <option value="1">One</option>
                                           <option value="2">Two</option>
                                           <option value="3">Three</option>
                                         </select>
                                    </li>
                                    <li class="navbar-item dropdown">   
                                        <h5 class="select-h5">PRECIO MÍN.</h5> 
                                        <select class="form-select-price" aria-label="Default select example">
                                          <option ></option>
                                          <option value="1">One</option>
                                          <option value="2">Two</option>
                                          <option value="3">Three</option>
                                        </select>
                                    </li>
                                    <li class="navbar-item dropdown">
                                    <h5 class="select-h5">PRECIO MÁX.</h5> 
                                        <select class="form-select-price" aria-label="Default select example">
                                         <option ></option>
                                         <option value="1">One</option>
                                         <option value="2">Two</option>
                                         <option value="3">Three</option>
                                        </select>
                                    </li>
                                </ul>
                                <form class="form-inline" >
                                    <div class="mb-3">
                                        <label class="form-label"> COMUNA O  PALABRA CLAVE</label>
                                        <input class="form-control mr-sm-4"/>
                                        <button class="btn btn-outline-secondary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                            </svg>
                                            APLICAR
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </nav>  
                    </div>    
                <div class="container container-property" style="background: #FFFFFF 0% 0% no-repeat padding-box">
                    <h3 class="search-property"> Encuentra tu propiedad</h3>
                    <div t-if="properties" class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-md-4 col-sm-4 col-xs-12 box-border-property" >
                                <div style="">
                                    <t t-call="property_management_master.property_item"/>
                                </div>
                                <div style="width:100%; height:20vh;">
                                    <div class="property-title" t-esc="property.name"/>
                                    <div class="property-description">Descripción propiedad</div>
                                    <div>
                                        <span class="property-price-currency" t-esc="property.lease_price_currency.name"/>
                                        <span class="property-price" t-esc="property.lease_price"/>
                                    </div>
                                    <ol class="list-attr-property">
                                        <li class="col-4 li-attr-property">
                                            <img src="property_management_master/static/src/img/bed.png" alt="Habitaciones" style="width:3vh; background: transparent; opacity: 1;"/>
                                            <span class=""> 3 </span>
                                        </li>
                                        <li class="col-4 li-attr-property">
                                            <img src="property_management_master/static/src/img/bath.png" alt="Baños" class="bath-icon"/>
                                            <span class=""> 2 </span>
                                        </li>
                                        <li class="col-4 li-attr-property">
                                            <img src="property_management_master/static/src/img/ruler.png" alt="Medidas" style="width:3vh; background: transparent; opacity: 1;"/>
                                            <span class=""> 260m </span>
                                        </li>
                                    </ol>
                                </div>
                            </div>
                        </t>
                    </div>
                    <div class="products_pager form-inline justify-content-center mt-3">
                        <t t-call="website.pager">
                            <t t-set="_classes">mt-2 ml-md-2</t>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="property_page" name="Property">
        <t t-call="website.layout">
            <div class="wrap">
                <span t-esc="property.name" style="font-weight: bolder;color: #3e3b3b;"/>
            </div>
        </t>
    </template>

    <template id="property_item" name="Property">
        <div class="image_content" style="width:100%; height:27vh; overflow: hidden;">
            <img t-att-src="'data:image/png;base64,%s' % to_text(property.image_1920)" class="img-fluid rounded" style="overflow: hidden; "/>
        </div>
    </template>

</odoo>